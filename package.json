    "@nestjs/core": "^6.5.3",
    "@nestjs/elasticsearch": "^7.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/platform-socket.io": "^6.5.3",
    "@nestjs/platform-ws": "^6.5.3",
    "@nestjs/serve-static": "^1.0.1",
    "@nestjs/typeorm": "^6.1.3",
    "@nestjs/websockets": "^6.5.3",
    "@types/dateformat": "^3.0.1",
    "@types/google__maps": "^0.5.8",
    "atob": "^2.1.2",
    "cookie-parser": "^1.4.5",
    "dateformat": "^3.0.3",
    "fastify-cookie": "^4.2.0",
    "html-pdf": "^2.2.0",
    "jwt-decode": "^3.1.2",
    "moment-timezone": "^0.5.33",
    "mysql": "^2.17.1",
    "nestjs-stripe": "^0.2.0",
    "onesignal-api-client-nest": "^1.0.7",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
